<main role="main" class="container">
  <p class="alert alert-info" role="alert"
  phx-click="lv:clear-flash"
  phx-value-key="info"><%= Phoenix.LiveView.Helpers.live_flash(@flash, :info) %></p>

  <p class="alert alert-danger" role="alert"
  phx-click="lv:clear-flash"
  phx-value-key="error"><%= Phoenix.LiveView.Helpers.live_flash(@flash, :error) %></p>

  <%= @inner_content %>
</main>
